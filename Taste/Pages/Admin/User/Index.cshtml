@page
@using Taste.Utility

@if (User.IsInRole(SD.ManagerRole))
{
    <div class="border container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-white">Users List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary"><i class="fas fa-plus">&nbsp;Create New</i></a>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <div class="col-12">
                <table id="DT_load" class="table text-dark table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div><h1 class="text-danger">Access denied.</h1></div>
}

@section Scripts{
    <script src="~/js/user.js"></script>
}
